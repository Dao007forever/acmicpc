	for (int i = 0; i < m; i++) {
		int a, b; double x; scanf("%d %d %lf", &a, &b, &x);
		if (a == b) { --m, --i; continue; }
		int eg1 = edge1(i), eg2 = edge2(i); cap[i] = x;
		double anab = atan2(ty[b] - ty[a], tx[b] - tx[a]);
		double anba = atan2(ty[a] - ty[b], tx[a] - tx[b]);
		vertex[a].PB(Edge(eg1, eg2, anab));
		vertex[b].PB(Edge(eg2, eg1, anba));
	}
	int addr1 = edge1(m), addr2 = edge2(m);
	vertex[s].PB(Edge(addr1, addr2, -pi));
	vertex[e].PB(Edge(addr2, addr1, 0));
